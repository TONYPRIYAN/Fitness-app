<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/water3">

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#0c0032"
        android:numbersSelectorColor="#190061"
        android:numbersTextColor="#3500d3"

        />

    <Button
        android:id="@+id/notificationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Water Remainder"
        android:background="#1f2833"
        android:textColor="#66FcF1"
        android:textStyle="italic"
        android:layout_below="@id/timePicker"
        android:layout_centerHorizontal="true"

        />
</RelativeLayout>
